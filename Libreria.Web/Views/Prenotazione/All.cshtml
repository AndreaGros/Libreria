@using Libreria.Core.Models;
@model List<Prenotazione>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Email</th>
            <th>Azioni</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var utente in Model)
        {
            <tr>
                <td>@utente.Id</td>
                <td>@utente.LibroPrenotato</td>
                <td>@utente.IdUtente</td>
                <td>@utente.IdLibro</td>
                <td>
                    <a asp-action="Details" asp-route-id="@utente.Id" class="btn btn-info btn-sm">Dettagli</a>
                    <a asp-action="Edit" asp-route-id="@utente.Id" class="btn btn-warning btn-sm">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@utente.Id" class="btn btn-danger btn-sm">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>