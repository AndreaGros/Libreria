@model Libreria.Core.Models.Utente
<h2>Conferma Eliminazione</h2>

<p>Sei sicuro di voler eliminare l'utente <strong>@Model.Nome @Model.Cognome</strong>?</p>


<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Sì, elimina</button>
	<a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>