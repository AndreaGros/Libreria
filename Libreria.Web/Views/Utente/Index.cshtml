@using Libreria.Core.Models;
@model List<Utente>

<div class="text-center">
    <h1 class="display-4">Gestione Utenti</h1>
    <p>Scegli un'operazione da eseguire:</p>
</div>

<div class="list-group">
    <a asp-controller="Utente" asp-action="Create" class="btn btn-primary btn-sm">
        Aggiungi un Nuovo Utente
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Email</th>
            <th>Azioni</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var utente in Model)
        {
            <tr>
                <td>@utente.Id</td>
                <td>@utente.Nome</td>
                <td>@utente.Cognome</td>
                <td>@utente.Mail</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@utente.Id" class="btn btn-warning btn-sm">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@utente.Id" class="btn btn-danger btn-sm">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>